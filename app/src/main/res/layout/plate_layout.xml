<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7EAF3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/pen_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_edit"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/plate_textview"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:text="01-644-MO"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/dm_sans"
        android:textColor="#1B1E2C"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pen_image"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*recently used"
        android:textColor="#656577"
        app:layout_constraintStart_toStartOf="@id/plate_textview"
        app:layout_constraintEnd_toEndOf="@id/plate_textview"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/plate_textview" />
</androidx.constraintlayout.widget.ConstraintLayout>