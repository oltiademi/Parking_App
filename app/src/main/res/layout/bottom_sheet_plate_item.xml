<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/check_image"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_check"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/plate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01-673-AJ"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/dm_sans"
        app:layout_constraintStart_toEndOf="@+id/check_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/used_last_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*used last time"
        android:visibility="invisible"
        android:textSize="12sp"
        android:textColor="#1B1E2C"
        android:fontFamily="@font/dm_sans"
        app:layout_constraintStart_toStartOf="@id/plate_text"
        app:layout_constraintTop_toBottomOf="@id/plate_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>