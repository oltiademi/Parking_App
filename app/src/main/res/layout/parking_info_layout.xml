<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/parking_info_layout_background"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/city_zone_textview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="City zone"
        android:fontFamily="@font/dm_sans"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/car_plates_textview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Car plates"
        android:fontFamily="@font/dm_sans"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_zone_textview" />

    <TextView
        android:id="@+id/max_stay_duration_textview"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Max stay duration"
        android:fontFamily="@font/dm_sans"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_plates_textview" />

    <TextView
        android:id="@+id/total_pay_textview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans"
        android:text="Total to pay"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/max_stay_duration_textview" />

    <TextView
        android:id="@+id/city_zone_value"
        android:layout_width="100dp"
        android:text="Area 1"
        android:fontFamily="@font/dm_sans"
        android:gravity="end"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/city_zone_textview"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/car_plates_value"
        android:layout_width="100dp"
        android:text="01-644-MO"
        android:fontFamily="@font/dm_sans"
        android:gravity="end"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_zone_value"
        android:layout_margin="16dp" />
    <TextView
        android:id="@+id/max_stay_duration_value"
        android:layout_width="100dp"
        android:text="60 min"
        android:fontFamily="@font/dm_sans"
        android:gravity="end"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_plates_value"
        android:layout_margin="16dp" />
    <TextView
        android:id="@+id/total_pay_value"
        android:layout_width="100dp"
        android:text="1.00 EUR"
        android:fontFamily="@font/dm_sans"
        android:gravity="end"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/max_stay_duration_value"
        android:layout_margin="16dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:background="@drawable/parking_info_layout_button"
        android:text="Pay now"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16dp"
        android:fontFamily="@font/dm_sans"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/total_pay_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>